<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Photo -->

    <!-- Your Details -->

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="150dp"
        android:src="@drawable/profilephoto" />

    <LinearLayout
        android:id="@+id/your_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kamila Pereira"
            android:textSize="24sp"/>

        <!-- Course -->
        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Science in Computing"
            android:textSize="18sp"/>

        <!-- Github Icon and Username -->
        <LinearLayout
            android:id="@+id/github_layout"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:src="@drawable/github" />

            <TextView
                android:id="@+id/github_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kamilapereira"
                android:layout_gravity="center"
                android:textSize="16sp" />



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
